{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.2",
    "@types/react": "^17.0.27",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.3.0",
    "axios": "^0.22.0",
    "bootstrap": "^5.1.3",
    "concurrently": "^6.3.0",
    "electron-is-dev": "^2.0.0",
    "electronmon": "^2.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "react-scripts": "4.0.3",
    "react-use-websocket": "^2.8.0",
    "reactstrap": "^8.10.0",
    "sass": "^1.42.1",
    "typescript": "^4.4.3",
    "wait-on": "^6.0.0",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "electron": "^15.1.0",
    "electron-builder": "^22.11.7"
  },
  "scripts": {
    "start": "concurrently \"yarn react-serve\" \"wait-on http://localhost:3000 && npm run electron-start\"",
    "build": "yarn react-build && npm run electron-build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "release": "yarn react-build && yarn electron-release",
    "electron-start": "electronmon .",
    "electron-build": "electron-builder",
    "electron-release": "electron-builder --publish=always",
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-serve": "SET BROWSER=none&&yarn react-start"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "main": "public/electron.js",
  "homepage": "./",
  "build": {
    "extends": null,
    "files": [
      "./build/**/*",
      "./public/electron.js"
    ]
  }
}
